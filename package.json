{
	"name": "doctestbtn",
	"displayName": "Doctest-Button",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:doctestbtn.execDoctest"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "doctestbtn.execDoctest",
				"title": "Run Doctest (Terminal)",
				"category": "Doctest",
				"icon": {
					"light": "./assets/ico_light.png",
					"dark": "./assets/ico_dark.png"
				}
			}
		],
		"menus":  {
			"commandPalette": [
				{
					"command": "doctestbtn.execDoctest",
					"when": "editorLangId == python",
					"title": "Run Doctest in Terminal"
				}
			],
			"editor/title": [
				{
				  "when": "editorLangId == python",
				  "command": "doctestbtn.execDoctest",
				  "group": "1_run"
				}
			  ]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
