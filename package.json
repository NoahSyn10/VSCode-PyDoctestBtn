{
	"name": "doctestbtn",
	"displayName": "Doctest-Button",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:doctestbtn.execDoctest_plain",
		"onCommand:doctestbtn.execDoctest_fancy",
		"onCommand:doctestbtn.execDoctest_xtraFancy"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "doctestbtn.execDoctest_plain",
				"title": "Doctest Python File in Terminal",
				"category": "Doctest",
				"icon": {
					"light": "./assets/icoSvg_light_plain.svg",
					"dark": "./assets/icoSvg_dark_plain.svg"
				}
			},
			{
				"command": "doctestbtn.execDoctest_fancy",
				"title": "Doctest Python File in Terminal",
				"category": "Doctest",
				"icon": {
					"light": "./assets/icoSvg_light_wBlue.svg",
					"dark": "./assets/icoSvg_dark_wBlue.svg"
				}
			},
			{
				"command": "doctestbtn.execDoctest_xtraFancy",
				"title": "Doctest Python File in Terminal",
				"category": "Doctest",
				"icon": {
					"when" : "editorLangId == python",
					"light": "./assets/icoSvg_light_fullColor.svg",
					"dark": "./assets/icoSvg_dark_fullColor.svg"
				}
			}
		],
		"menus":  {
			"commandPalette": [
				{
					"command": "doctestbtn.execDoctest_plain",
					"when": "editorLangId == python",
					"title": "Run Doctest in Terminal"
				}
			],
			"editor/title": [
				{
				  "when": "editorLangId == python && !config.doctestbtn.buttonColor.fancy && !config.doctestbtn.buttonColor.xtraFancy",
				  "command": "doctestbtn.execDoctest_plain",
				  "group": "1_run"
				},
				{
					"when": "editorLangId == python && config.doctestbtn.buttonColor.fancy && !config.doctestbtn.buttonColor.xtraFancy",
					"command": "doctestbtn.execDoctest_fancy",
					"group": "1_run"
				},
				{
					"when": "editorLangId == python && config.doctestbtn.buttonColor.xtraFancy",
					"command": "doctestbtn.execDoctest_xtraFancy",
					"group": "1_run"
				}
			  ]
		},
		"configuration": {
			"title": "DoctestBtn",
			"properties": {
			  "doctestbtn.buttonColor.fancy": {
				"type": "boolean",
				"default": "false",
				"markdownDescription": "Use black/white + blue button. [Comparison](https://github.com/NoahSyn10/VSCode_DoctestBtn/blob/main/assets/BtnComparison.png)"
			  },
			  "doctestbtn.buttonColor.xtraFancy": {
				"type": "boolean",
				"default": "false",
				"markdownDescription": "Use orange + blue button. [Comparison](https://github.com/NoahSyn10/VSCode_DoctestBtn/blob/main/assets/BtnComparison.png)"
			  },
			  "doctestbtn.doctestPath": {
				"type": "string",
				"default": "doctest",
				"description": "Path to doctest module, you can use a custom module by editing this feild."
			  }
			}
		  }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
